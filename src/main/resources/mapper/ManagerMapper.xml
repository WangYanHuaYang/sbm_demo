<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyhy.sbm_demo.dao.ManagerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wyhy.sbm_demo.model.Manager">
        <id column="id" property="id" />
        <result column="managerName" property="managerName" />
        <result column="password" property="password" />
        <result column="state" property="state" />
    </resultMap>

    <resultMap id="userMap" type="com.wyhy.sbm_demo.model.Manager">
        <id column="id" property="id" />
        <result column="managerName" property="managerName" />
        <result column="password" property="password" />
        <result column="state" property="state" />
        <collection property="roles" ofType="com.wyhy.sbm_demo.model.Role">
            <result column="name" property="name"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, managerName, password, state
    </sql>

    <select id="findByUserName" parameterType="string" resultMap="userMap">
        select u.*
        ,r.rolename
        from manager u
        LEFT JOIN manager_role sru on u.id= sru.managerid
        LEFT JOIN role r on sru.roelid=r.id
        where u.managerName= #{username}
    </select>

</mapper>
