<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyhy.sbm_demo.dao.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wyhy.sbm_demo.model.Permission">
        <id column="id" property="id" />
        <result column="permissionName" property="permissionName" />
        <result column="permissionCode" property="permissionCode" />
        <result column="permissionType" property="permissionType" />
        <result column="permissionId" property="permissionId" />
        <result column="href" property="href" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, permissionName, permissionCode, permissionType, permissionId, href
    </sql>

    <select id="findByAdminUserId" parameterType="int" resultType="com.wyhy.sbm_demo.model.Permission">
      select p.*
        from manager u
        LEFT JOIN manager_role sru on u.id= sru.managerid
        LEFT JOIN role r on sru.roelid=r.id
        LEFT JOIN role_permission spr on spr.roleid=r.id
        LEFT JOIN permission p on p.id =spr.permissionid
        where u.id=#{userId}
 </select>

</mapper>
